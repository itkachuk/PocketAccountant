<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ListView android:id="@+id/categoriesAmountsList"
    	android:background="@color/background"
    	android:layout_marginBottom="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    
    <!--  LinearLayout android:id="@+id/consolidatedBarChart" 
        android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_weight="0" />-->

	<LinearLayout android:orientation="horizontal" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 		
		android:layout_gravity="center">
	
    	<ImageButton android:id="@+id/backButton"
    		android:gravity="center"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1"               
	        android:src="@drawable/undo"/>
    	
    	<ImageButton android:id="@+id/filterButton"
    		android:gravity="center"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1"               
	        android:src="@drawable/ic_menu_filter"/> 
	    
	    <ImageButton android:id="@+id/changeViewButton"
    		android:gravity="center"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1"	               
	        android:src="@drawable/ic_menu_refresh"/>    
   	</LinearLayout>	
</LinearLayout>