<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:background="@color/background"
  	android:padding="10dip"
  	android:orientation="vertical"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent">
    
	<TextView
		android:id="@+id/inc_exp_per_month_label"
        android:text="@string/inc_exp_per_month_text"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/pure_white_color"
        android:gravity="right"
        android:padding="3dip" />
	               
    <TableLayout 
    	android:id="@+id/tableLayout1"
    	android:layout_below="@id/inc_exp_per_month_label"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">

		<TableRow>
			<TextView android:layout_column="1"
				android:background="@drawable/cell_shape"
				android:padding="3dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>
			<TextView
	            android:text="@string/past_text"
	            android:textColor="@color/light_blue_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="3dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />		
	        <TextView
	            android:text="@string/current_text"
	            android:textColor="@color/light_blue_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:layout_width="0dp"
	            android:layout_weight="1"/>
    	</TableRow>
		
		<TableRow>
	        <TextView android:layout_column="1"
	        	android:text="@string/income_text"
	        	android:textColor="@color/light_yellow_color"
				android:background="@drawable/cell_shape"
				android:padding="5dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>    
	        
	        <TextView
	        	android:id="@+id/pastMonthIncomeAmount"
	            android:textColor="@color/income_amount_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
	        		
	        <TextView
	        	android:id="@+id/currentMonthIncomeAmount"
	            android:textColor="@color/income_amount_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
    	</TableRow>
    	<TableRow>
	        <TextView android:layout_column="1"
	        	android:text="@string/expense_text"
	        	android:textColor="@color/light_yellow_color"
				android:background="@drawable/cell_shape"
				android:padding="5dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/> 		
	        <TextView
	        	android:id="@+id/pastMonthExpenseAmount"
	            android:textColor="@color/expense_amount_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
	        <TextView
	        	android:id="@+id/currentMonthExpenseAmount"
	            android:textColor="@color/expense_amount_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
    	</TableRow>    		        
	</TableLayout>
	
	<TextView
		android:id="@+id/balance_label"
        android:text="@string/balance_text"
        android:textColor="@color/pure_white_color"
        android:layout_below="@id/tableLayout1"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dip"
        android:gravity="right"
        android:padding="3dip" />
		
	<TableLayout 
    	android:id="@+id/tableLayout2"
    	android:layout_below="@id/balance_label"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">		
		    	
    	<TableRow>
			<TextView android:layout_column="1"
				android:background="@drawable/cell_shape"
				android:padding="3dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>
			<TextView
	            android:text="@string/past_text"
	            android:textColor="@color/light_blue_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="3dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />		
	        <TextView
	            android:text="@string/current_text"
	            android:textColor="@color/light_blue_color"
	            android:background="@drawable/cell_shape"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:layout_width="0dp"
	            android:layout_weight="1"/>
    	</TableRow>
    	
    	<TableRow>
	        <TextView android:layout_column="1"
	        	android:text="@string/month_text"
	        	android:textColor="@color/light_yellow_color"
				android:background="@drawable/cell_shape"
				android:padding="5dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>    
	        
	        <TextView
	        	android:id="@+id/pastMonthBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
	        		
	        <TextView
	        	android:id="@+id/currentMonthBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
    	</TableRow>
    	
    	<TableRow>
	        <TextView android:layout_column="1"
	        	android:text="@string/quarter_text"
	        	android:textColor="@color/light_yellow_color"
				android:background="@drawable/cell_shape"
				android:padding="5dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>    
	        
	        <TextView
	        	android:id="@+id/pastQuarterBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
	        		
	        <TextView
	        	android:id="@+id/currentQuarterBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
    	</TableRow>
    	
    	<TableRow>
	        <TextView android:layout_column="1"
	        	android:text="@string/year_text"
	        	android:textColor="@color/light_yellow_color"
				android:background="@drawable/cell_shape"
				android:padding="5dip"
				android:layout_width="0dp"
				android:layout_weight="0.6"/>    
	        
	        <TextView
	        	android:id="@+id/pastYearBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
	        		
	        <TextView
	        	android:id="@+id/currentYearBalance"
	            android:background="@drawable/cell_shape"
	            android:textColor="@color/pure_white_color"
	            android:gravity="right"
	            android:padding="5dip"
	            android:layout_width="0dp"
	            android:layout_weight="1" />
    	</TableRow>		
    </TableLayout>  		
   	
   	<LinearLayout android:orientation="horizontal" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" 		
		android:layout_gravity="center">
	
    	<ImageButton android:id="@+id/backButton"
    		android:gravity="center"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1"               
	        android:src="@drawable/undo"/>
	    
		<ImageButton android:id="@+id/filterButton"
    		android:gravity="center"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1"               
	        android:src="@drawable/ic_menu_filter"/>    
   	</LinearLayout>	
	         
</RelativeLayout>
